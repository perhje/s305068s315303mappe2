<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bestillingsadministratoren"
        android:textSize="30sp"
        android:textColor="#000000"
        android:paddingBottom="80dp"
        android:paddingTop="20dp"/>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="60dp">
    <Button
        android:id="@+id/venner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="visVenner"
        android:text="Legg til venner"
        android:layout_row="0"
        android:layout_column="0"/>

    <Button
        android:id="@+id/restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="visRestaurant"
        android:text="Legg til restaurant"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button
        android:id="@+id/bestilling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="visBestilling"
        android:text="Legg til bestilling"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        android:id="@+id/preferanser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="visPreferanser"
        android:text="Endre preferanser"
        android:layout_row="3"
        android:layout_column="0"/>
</GridLayout>
</LinearLayout>